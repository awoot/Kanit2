
@{
    ViewBag.Title = "IndexExchangeRate";
}

@Styles.Render("~/Content/kendo/styles/kendo.common-bootstrap.min.css")
@Styles.Render("~/Content/kendo/styles/kendo.bootstrap.min.css")


@Scripts.Render("~/Scripts/kendo/js/kendo.ui.core.min.js")

@Scripts.Render("~/Scripts/Common.js")

@*<h2>IndexExchangeRate</h2>*@
<script src="@Url.Content("~/Scripts/CUDS/Setting/ExchangeRate/IndexExchangeRate.js")" type="text/javascript"></script>
<div class="modal fade" id="ShowDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
<div class="row">
    <div class="col-lg-12">
        <!--<h3 class="page-header"><i class="fa fa-file-text-o"></i> Quotation</h3>-->
        <div class="page-header">
            <div class="col-xs-9 col-sm-9 col-lg-11 marginbuttom15"><a href="/ExchangeRate/CreateExchangeRate" class="btn btn-primary">Create</a></div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <!--<div class="col-lg-6"></div>-->
            <header class="panel-heading">
                <div class="col-lg-12 col-md-12">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">Exchange Rate</div>
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-6">
                        <label class="checkboxstyle"><input id="chkHistory" type="checkbox" class="mgr5" value="">History</label>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 padding7">
                        <input id="txtSearchExchangeRate" class="form-control" placeholder="Search" type="text">
                    </div>
                </div>
            </header>
            <div class="table-responsive">
                <table id="tblExchangeRate" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>Currency</th>
                            <th>Rate (บาท)</th>
                            <th>Update Date</th>
                            <th><i class="icon_cogs"></i> Action</th>
                        </tr>
                    </thead>
                    <tbody data-bind="source: dataSource" data-template="templateExchangeRate"></tbody>
                </table>
            </div>
            <div class="modal fade" id="ConfirmDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title">Delete</h4>
                        </div>
                        <div class="modal-body">

                            Do You Want to Delete?

                        </div>
                        <div class="modal-footer">
                            <button data-dismiss="modal" class="btn btn-default" type="button">Close</button>
                            <button class="btn btn-danger" type="button" data-dismiss="modal"> Confirm</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<script id="templateExchangeRate" type="text/template">
    # if(IsDisplay) { #
    <tr>
        <td><span data-bind="text: RowNum" /></td>
        <td><span data-bind="text: CurrencyName" /></td>
        <td><span data-format="n2" data-bind="text: Rate" /></td>
        <td><span data-format="dd/MM/yyyy hh:mm" data-bind="text: UpdateDate" /></td>
        <td>
            # if(IsHistory == 0) { #
            <div>
                <a class="btn btn-success" href="/ExchangeRate/EditExchangeRate?id=#: ID #"><i class="icon_pencil-edit_alt"></i></a>
                <a class="btn btn-danger" data-toggle="modal" onclick="ConfirmDialog('Delete','ExchangeRate','#:ID #')"><i class="icon_close_alt2"></i></a>
            </div>
            # } #
        </td>
    </tr>
    # } else { #
    <tr data-temp="true"></tr>
    # } #
</script>
