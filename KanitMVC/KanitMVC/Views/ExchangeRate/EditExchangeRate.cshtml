                <button type="button" id="btnDiscard" class="btn btn-danger" onclick="Redirect()">Discard</button>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Exchange Rate
            </header>
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-12 col-sm-6">
                        <div class="form-group">
                            <label class="col-xs-2 col-sm-2 control-label">Currency</label>
                            <div class="col-xs-6 col-sm-6">
                                <select id="cmbCurrency" class="form-control m-bot15"></select>
                            </div>
                            <label class="col-xs-1 col-sm-1 control-label">Rate</label>
                            <div class="col-xs-3 col-sm-3">
                                <input id="txtRate" class="form-control m-bot15 text-right" type="text">
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6">
                        <div class="form-group">
                            <label class="col-xs-1 col-sm-1 control-label">Date</label>
                            <div class="col-xs-3 col-sm-5">
                                <div class="input-group date" id="datetimepicker1">
                                    <input id="dtUpdateDate" type="text" class="form-control" disabled="disabled"/>
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
