
@{
    ViewBag.Title = "EditUser";
}

@*<h2>EditUser</h2>*@
<script src="@Url.Content("~/Scripts/CUDS/Setting/User/EditUser.js")" type="text/javascript"></script>
<div class="modal fade" id="ShowDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">
            <i class="fa fa-file-text-o"></i> User / Edit
        </h3>
        <div class="col-xs-9 col-sm-10 col-lg-11">
            <div class="row m-bot15">
                @*<a href="#" id="btnSave" class="btn btn-primary">Save</a>*@
                @*<a href="IndexUser.aspx" id="btnDiscard" class="btn btn-danger">Discard</a>*@
                <button type="button" id="btnSave" class="btn btn-primary" onclick="Isvalidate('Update', 'User', @Request.Params["id"])">Save</button>
                @*<button type="button" id="btnSave" class="btn btn-primary" onclick="CreateData()">Save</button>*@
                <button type="button" id="btnDiscard" class="btn btn-danger" onclick="Redirect()">Discard</button>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-6 col-sm-6">
        <div class="form-group">
            <label class="col-sm-3 control-label">User Name</label>
            <div class="col-sm-5">
                <input id="txtUserName" class="form-control m-bot15" type="text">
            </div>
        </div>
    </div>
    <div class="col-xs-6 col-sm-6">
        <div class="form-group">
            <label class="col-sm-3 control-label">Password</label>
            <div class="col-sm-5">
                <input id="txtPassword" class="form-control m-bot15" type="password">
            </div>
        </div>
    </div>
    <div class="col-xs-6 col-sm-6">
        <div class="form-group">
            <label class="col-sm-3 control-label">First Name</label>
            <div class="col-sm-5">
                <input id="txtFirstName" class="form-control m-bot15" type="text">
            </div>
        </div>
    </div>
    <div class="col-xs-6 col-sm-6">
        <div class="form-group">
            <label class="col-sm-3 control-label">Last Name</label>
            <div class="col-sm-5">
                <input id="txtLastName" class="form-control m-bot15" type="text">
            </div>
        </div>
    </div>
    <div class="clearfix visible-xs-block"></div>
    <div class="col-xs-6 col-sm-6">
        <div class="form-group">
            <label class="col-sm-3 control-label">Position</label>
            <div class="col-sm-5">
                <select id="cmbPosition" class="form-control m-bot15"></select>
            </div>
        </div>
    </div>
    <div class="col-xs-6 col-sm-6">
        <div class="form-group">
            <label class="col-sm-3 control-label">Section</label>
            <div class="col-sm-5">
                <select id="cmbDepartment" class="form-control m-bot15"></select>
            </div>
        </div>
    </div>
    <div class="clearfix visible-xs-block"></div>
    <div class="col-xs-6 col-sm-6">
        <div class="form-group">
            <label class="col-sm-3 control-label">Division</label>
            <div class="col-sm-5">
                <select id="cmbSection" class="form-control m-bot15"></select>
            </div>
        </div>
    </div>
    <div class="col-xs-6 col-sm-6">
        <div class="form-group">
            <label class="col-sm-3 control-label">Quotation</label>
            <div class="col-sm-5">
                <select id="cmbQuotation" class="form-control m-bot15"></select>
            </div>
        </div>
    </div>
    <div class="clearfix visible-xs-block"></div>
    <div class="col-xs-6 col-sm-6">
        <div class="form-group">
            <label class="col-sm-3 control-label">Email</label>
            <div class="col-sm-5">
                <input id="txtEmail" class="form-control m-bot15" type="text">
            </div>
        </div>
    </div>
    <div class="col-xs-6 col-sm-6">
        <div class="form-group">
            <label class="col-sm-3 control-label">Security Profile</label>
            <div class="col-sm-5">
                <select id="cmbSecurityProfile" class="form-control m-bot15"></select>
            </div>
        </div>
    </div>
</div>
