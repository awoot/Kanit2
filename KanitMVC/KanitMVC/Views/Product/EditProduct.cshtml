
@{
    ViewBag.Title = "EditProduct";
}

@*<h2>EditProduct</h2>*@
<script src="@Url.Content("~/Scripts/CUDS/Product/Stock/EditProduct.js")" type="text/javascript"></script>
<div class="modal fade" id="ShowDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">
            <i class="fa fa-file-text-o"></i> Product / Edit
        </h3>
        <div class="col-xs-9 col-sm-10 col-lg-11">
            <div class="row m-bot15">
                @*<a href="#" id="btnSave" class="btn btn-primary">Save</a>*@
                @*<a href="IndexUser.aspx" id="btnDiscard" class="btn btn-danger">Discard</a>*@
                <button type="button" id="btnSave" class="btn btn-primary" onclick="Isvalidate('Update', 'Product', @Request.Params["id"])">Save</button>
                @*<button type="button" id="btnSave" class="btn btn-primary" onclick="CreateData()">Save</button>*@
                <button type="button" id="btnDiscard" class="btn btn-danger" onclick="Redirect()">Discard</button>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Products
            </header>
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-6 col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Product Code</label>
                            <div class="col-sm-4">
                                <input id="txtProductCode" class="form-control m-bot15" type="text">
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-6 col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Order Number</label>
                            <div class="col-sm-4">
                                <input id="txtOrdNum" class="form-control m-bot15" type="text">
                            </div>
                        </div>
                    </div>
                    <div class="clearfix visible-xs-block"></div>
                    <div class="col-xs-6 col-sm-6 spandiv">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Product Detail</label>
                            <div class="col-sm-8">
                                @*<input class="form-control m-bot15" type="text">*@
                                <textarea id="txtProductDetail" class="form-control m-bot15" rows="3"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-6 col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Unit</label>
                            <div class="col-sm-3">
                                <select id="cmbUnit" class="form-control m-bot15"></select>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix visible-xs-block"></div>
                    <div class="col-xs-6 col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-3 control-label mgr-top7">Standard Cost</label>
                            <div class="col-sm-4">
                                <input id="txtStandardCost" class="form-control m-bot15 mgr-top25 text-right" type="text">
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-6 col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Selling Price</label>
                            <div class="col-sm-4">
                                <input id="txtSellingPrice" class="form-control m-bot15 text-right" type="text">
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-6 col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Warning Stock</label>
                            <div class="col-sm-3">
                                <input id="txtWarningStock" class="form-control m-bot15 text-right" type="text">
                            </div>
                        </div>
                    </div>
                    <div class="clearfix visible-xs-block"></div>
                    <div class="col-xs-6 col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Remain</label>
                            <div class="col-sm-3">
                                <input id="txtRemain" class="form-control m-bot15 text-right" type="text">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
